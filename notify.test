  // Test notification when cron is set up to never send anything
  public function testCronNever() {
    // Set up notify environment.
    config_set('notify.settings','notify_attempts', 5);
    config_set('notify.settings','notify_include_updates', 0);
    config_set('notify.settings','notify_reg_default', 1);
    config_set('notify.settings','notify_period', -1);
    config_set('notify.settings','notify_send_hour',  9);
    config_set('notify.settings','notify_batchsize', 100);
    $now = REQUEST_TIME;
    state_set('notify_send_start', 0);  // We haven't started
    $tt = $now - 86400; state_set('notify_send_last',  $tt); // Last was yesterday.
    $tt = $now + 86400; state_set('notify_cron_next',  $tt); // Next cron scheduled tomorrow.

    $this->createContent(3);
    $this->cronRun();
    $mails = $this->backdropGetMails();
    $howmany = count($mails);
    $this->assertEqual($howmany, 0, 'No emails are sent.');
  }

