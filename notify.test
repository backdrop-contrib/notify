    config_set('notify.settings', 'notify_batchsize', 100);

    $now = REQUEST_TIME;
    state_set('notify_send_start', 0);  // We haven't started
    $tt = $now - 86400; state_set('notify_send_last',  $tt); // Last was yesterday.
    $tt = $now + 86400; state_set('notify_cron_next',  $tt); // Next cron scheduled tomorrow.

    $this->createContent(1, $this->user->name, FALSE);
    $this->cronRun();
    $mails = $this->backdropGetMails();
    $howmany = count($mails);
    $this->assertEqual($howmany, 1, 'One email is sent.');
